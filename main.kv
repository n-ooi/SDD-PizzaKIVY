            Button:
                text: "Back: Home"
                color: 1,1,1
                font_size: "30dp"
                font_name: "OpenSansLight"
                on_release:
                    app.root.current = "home"
                    root.manager.transition.direction = "right"
                background_color: (0,0,0,0)
                background_normal: ''
            Label:
                text: "Joe's Pizza"
                color: 1,1,1
                font_size: "40dp"
                font_name: "OpenSansLight"
            Button:
                text: "Next: Drinks"
                color: 1,1,1
                font_size: "30dp"
                font_name: "OpenSansLight"
                on_release:
                    app.root.current = "drinks"
                    root.manager.transition.direction = "left"

                background_color: (0,0,0,0)
                background_normal: ''
        Screen:
            ScrollView:
                scroll_wheel_distance: 65
                size: self.size
                canvas.before:
                    Color:
                        # rgb: 0.5,0.8,0.7
                    Rectangle:
                        # source: "images/woodbg.jpg"
                        size: self.size
                GridLayout:
                    size_hint_y: None
                    cols: 3
                    padding: "80dp"
                    spacing: "80dp"
                    height: self.minimum_height
                    width: self.minimum_width

