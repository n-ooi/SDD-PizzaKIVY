<PizzaItem@MDCard>:
    padding: "20dp"
    spacing: "20dp"
    orientation: "vertical"
    height: "500dp"
    size_hint: 1,None
    elevation: elevationV
    border_radius: 50
    radius: [50]
    md_bg_color: 1,1,1,1

<RoundedButton@Button>:
    size: self.height, self.height
    size_hint: .5, 1
    background_color: (0,0,0,0)
    background_normal: ''
    canvas.before:
        Color:
            # rgba: 0.4,0.7,0.6,1
        Ellipse:
            size: self.height, self.height
            pos: self.pos
        Rectangle:
            source: "PizzaTemplate.png"
            size: self.height*.9, self.height*.9
            pos: self.pos

<PizzaDetails@BoxLayout>:
    size_hint: 1,.3
    spacing: "40dp"
    padding: "15dp"
    pos_hint: {'center_x': .5, 'center_y': .5}

<PizzaName@Label>:
    size_hint: 1, .1
    color: 0.7,0,0
    font_size: "30dp"

<PizzaPrice@Label>:
    font_size: "30dp"
    color: 0.7,0,0

<drinkDetails@BoxLayout>:
    size_hint: 1,.3
    spacing: "40dp"
    padding: "15dp"
    pos_hint: {'center_x': .5, 'center_y': .5}

<drinkName@Label>:
    size_hint: 1, .1
    color: 0.7,0,0
    font_size: "30dp"

<drinkPrice@Label>:
    font_size: "30dp"
    color: 0.7,0,0

<drinkItem@MDCard>:
    padding: "20dp"
