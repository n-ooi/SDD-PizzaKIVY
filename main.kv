    orientation: "vertical"
    height: "500dp"
    size_hint: 1,None
    elevation: elevationV
    border_radius: 50
    radius: [50]
    md_bg_color: 1,1,1,1


<MinusButton@Button>:
    text: "-"
    font_size: "30dp"
    color: 0.7,0,0
    background_color: (0,0,0,0)
    background_normal: ''

<PlusButton@Button>:
    text: "+"
    font_size: "30dp"
    color: 0.7,0,0
    background_color: (0,0,0,0)
    background_normal: ''

<QuantityValue@MDCard>:
    elevation: 2
    border_radius: 10
    radius: [10]
    md_bg_color: 1,1,1,1

<QuantityChanging@MDCard>:
    elevation: 5
    border_radius: 10
    radius: [10]
    md_bg_color: 1,1,1,1

<IdValue@Label>:
    text: "0"
    font_size: "30dp"
    color: 0.7,0,0

