##########################################################################################################
<HomeScreen@Screen>:
    name: "first"
    BoxLayout:
        orientation: "vertical"
        canvas.before:
            Color:
                rgb: 0.7,0,0
            Rectangle:
                size: self.size
                pos: self.pos
        BoxLayout:
            size_hint: 1, .1
            Button:
                text: "Help"
                color: 1,1,1
                font_size: "30dp"
                font_name: "OpenSansLight"
                on_release:
                    app.root.current = "help"
                    root.manager.transition.direction = "right"
                background_color: (0,0,0,0)
                background_normal: ''
            Label:
                text: "Circular Bread"
                color: 1,1,1
                font_size: "40dp"
                font_name: "OpenSansLight"
            Button:
                text: "Order"
                color: 1,1,1
                font_size: "30dp"
                font_name: "OpenSansLight"
                on_release:
                    app.root.current = "second"
                    root.manager.transition.direction = "left"
                background_color: (0,0,0,0)
                background_normal: ''
        BoxLayout:
            canvas.before:
                Rectangle:
                    source: "images/Front.jpg"
                    size: self.size
                    pos: self.pos
        Credits:

